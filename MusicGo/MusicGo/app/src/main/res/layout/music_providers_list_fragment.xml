<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MusicProvidersListFragment" >

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/app_theme_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/connect_spotify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_30"

                android:background="@drawable/btn_music_provider_background"

                android:clickable="true"
                android:drawableStart="@drawable/ic_spotify"

                android:fontFamily="@font/roboto"
                android:text="@string/spotify_text"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/sp_48"
                android:textStyle="normal"
                android:focusable="true" />

            <Button
                android:id="@+id/connect_apple_music"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_30"
                android:text="@string/apple_music_name_text" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>